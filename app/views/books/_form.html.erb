<div class="col-md-6 col-md-offset-3">
  <%= form_for(@book) do |f| %>

    <div class="form-group">
      <%= f.label :title %>
      <%= f.text_field :title, class: 'form-control' %>
    </div>
    
    <div class="form-group">
      <%= f.label :author %>
      <%= f.text_field :author, class: 'form-control' %>
    </div>
    
    <div class="form-group">
      <%= f.label :category %>
      <%= f.select :category, ['Bisnis & Ekonomi', 'Sejarah', 'Budaya', 'Sastra', 'Agama', 'Sains', 'Ilmu Sosial', 'Psikologi', 'Pengembangan Diri', 'Keluarga', 'Pendidikan', 'Komputer & Teknologi', 'Seni & Desain', 'Novel', 'Gaya Hidup', 'Pertanian', 'Hukum']%>
    </div>

    <div class="form-group">
      <%= f.label :synopsis %>
      <%= f.text_area :synopsis, rows: 10, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.submit "Submit", class: 'btn btn-primary form-control' %>
    </div>
    
  <% end %>
</div>